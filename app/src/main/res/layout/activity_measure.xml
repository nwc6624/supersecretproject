<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#666">

    <!-- AR Scene View -->
    <FrameLayout
        android:id="@+id/arSceneViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Hand Motion View -->
    <de.westnordost.streetmeasure.HandMotionView
        android:id="@+id/handMotionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"/>

    <!-- Top instruction label -->
    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/ar_tracking_error_background"
        android:padding="16dp"
        android:text="Tap each corner to outline the area"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <!-- Floating area bubble (positioned dynamically) -->
    <FrameLayout
        android:id="@+id/areaBubbleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speech_bubble_bottom_center"
            android:padding="12dp">

            <TextView
                android:id="@+id/areaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area: -- sq ft"
                android:textColor="#2D5A4A"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Area: 12.5 sq ft" />

        </FrameLayout>

    </FrameLayout>

    <!-- Bottom control row -->
    <LinearLayout
        android:id="@+id/bottomControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Back Arrow button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_white_button"
            android:elevation="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_start_over_48"
            android:visibility="gone"
            app:tint="#2D5A4A"
            tools:visibility="visible" />

        <!-- Undo button -->
        <ImageView
            android:id="@+id/undoButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_white_button"
            android:elevation="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_start_over_48"
            android:visibility="gone"
            app:tint="#2D5A4A"
            tools:visibility="visible" />

        <!-- Check/Confirm button -->
        <ImageView
            android:id="@+id/confirmButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_white_button"
            android:elevation="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_check_48"
            android:visibility="gone"
            app:tint="#2D5A4A"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Bottom instruction text -->
    <TextView
        android:id="@+id/bottomInstructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/ar_tracking_error_background"
        android:padding="12dp"
        android:text="Tap to add point to polygon"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <!-- AR tracking error message -->
    <TextView
        android:id="@+id/tracking_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ar_tracking_error_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="#fff"
        android:visibility="gone"
        tools:text="@string/ar_core_tracking_error_no_plane_hit"
        tools:visibility="visible" />

</RelativeLayout>